{
  "appId": "com.controlventas.despensa",
  "productName": "Control de Ventas - Despensa",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "main.js",
    "preload.js",
    "src/**/*",
    "data/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "data",
      "to": "data"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Control de Ventas"
  },
  "portable": {
    "artifactName": "ControlVentas-Despensa.exe"
  },
  "publish": null
}
